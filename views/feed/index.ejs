<%layout('./layouts/boilerplate')%>
<head>
    <link rel="stylesheet" href="css/feedindex.css">
</head>
  <div class="feedpage  container">

    <div class="row" style="background-color: rgb(240, 240, 240); padding:3rem;">
      <div class=" col-9 offset-1 ">
        <h1 class="fheading mb-5" style="
    text-align:center;
    font-size: 5rem;
    font-family: 'italiana';
    color:rgb(84, 11, 11);
    font-weight: 500;
  
  ">Inspire</h1>
        <ul>
          <% for( let feed of feeds) { %>
            
              <div class="carddiv container px-1">
                <a class="cardanchor" href="/feed/<%= feed._id%>">
                <div class="card mb-4">
                  <% if (feed.image) { %>
                    <img class="card-img-top"  src="<%= feed.image %>" alt="Card image cap">
                    <% } %>
    
                      <div class="card-body ">
                        <h5 class="card-title">
                          <%=feed.title%>
                        </h5>
                        <p class="card-text">
                          <%= feed.caption %>
                        </p>
                        <p style="font-size: 1rem;">
                          <%= feed.likes %> Inspired</h6>
                      </div>
                      <div class="card-footer">
                        <small class="text-muted">
                          <%= feed.uploaddate %>
                        </small>
                      </div>
                </div>
                </a>
              </div>
      <% } %>
        </ul>

      </div>
    </div>

  </div>

